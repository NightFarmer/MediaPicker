<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nightfarmer.mediapicker" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MediaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MediaPickActivity"
            android:label="@string/title_activity_media_pick"
            android:configChanges="orientation|keyboardHidden|screenSize"
            >

        </activity>
        <activity
            android:name=".activity.MediaHandlerActivity"
            android:label="@string/title_activity_media_handler" >
        </activity>
    </application>

</manifest>
